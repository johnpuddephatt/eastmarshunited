---
layout: base
---

<div class="invest__hero">
  <div class="container">
    <h1 class="invest__hero__title">{{ title }}</h1>
    <div class="invest__hero__subtitle">{{ subtitle  | markdown | safe }}</div>
    
  </div>
</div>

<div class="tree__signup">
  <div class="container">
    <div>
      {{ intro | markdown | safe}}
      
      
      <img style="margin-top: 1em; margin-bottom: 0.5em; width: 150px;" src="/assets/images/berkeley-group.jpg" />
      <p style="font-size: 0.8em; color: #666">Work kindly supported by the Berkeley Group</p>
    </div>
    <div>
      <img  src="/assets/images/tree.jpg"/>
    </div>
  </div>
</div>

<div class="tree__plan">
  <div class="container">
    <div>
      <img src="/assets/images/map-with-trees.svg" />
    </div>
    <div>
      {{ plan | markdown | safe}}
    </div>
  
  </div>
</div>

<div class="tree__signup">
  <div class="container">
    <div>
      {{ get_involved | markdown | safe}}
    </div>
    <div>
    <form netlify name="trees" method="POST">
      <h3>Sign up to volunteer!</h3>

      <div class="field">
        <label>Name</label>
        <input name="name" type="text" />
      </div>

      <div class="field">
        <label>Email</label>
        <input name="email" type="email" />
      </div>
      
      <fieldset>
        <legend>I'm interested in:</legend>
        <div class="field">
          <input type="checkbox" name="morning" id="morning" value="true">
          <label for="morning">Volunteering to help with the schoolchildren in the morning between 10am - 1pm</label>
        </div>
        
        <div class="field">
          <input type="checkbox" name="afternoon" id="afternoon" value="true">
          <label for="afternoon">Volunteering to help plant trees in the afternoon between 2pm - 4pm</label>
        </div>
      </fieldset>

      <input class="button" type="submit" value="Sign up">

  
    </div>
  </div>
</div>

<div class="tree__sponsor">
  <div class="container">
    <div>
      {{ sponsor | markdown | safe}}
      <br>
      
      <button class="button button--inverted" data-paperform-id="sponsor-tree" data-popup-button="1">Sponsor a tree!</button>
      <script>(function() {
      var script = document.createElement('script');
      script.src = "https://paperform.co/__embed.min.js";
      document.body.appendChild(script); })()</script>
    </div>
    <div>
      <img src="/assets/images/tree_2.png" />
    </div>
  </div>
</div>

